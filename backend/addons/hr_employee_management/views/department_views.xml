<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Department Tree View -->
    <record id="view_department_tree_custom" model="ir.ui.view">
        <field name="name">hr.department.tree.custom</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <tree string="Departments">
                <field name="code"/>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="employee_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Department Form View -->
    <record id="view_department_form_custom" model="ir.ui.view">
        <field name="name">hr.department.form.custom</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="code"/>
            </xpath>
            
            <xpath expr="//field[@name='manager_id']" position="after">
                <field name="description"/>
                <field name="budget"/>
                <field name="employee_count"/>
            </xpath>
            
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_employees" type="object" class="oe_stat_button" icon="fa-users">
                        <field name="employee_count" widget="statinfo" string="Employees"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Department Action -->
    <record id="action_department_custom" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
